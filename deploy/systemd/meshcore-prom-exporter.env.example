# Required target node/repeater name
MESHCORE_TARGET=repeater01

# Optional meshcli binary path
MESHCORE_CLI_BIN=meshcli

# Connection args for meshcli, example for TCP companion:
# MESHCORE_ARGS=-t 192.168.1.10 -p 5000
MESHCORE_ARGS=

# Optional auth
# MESHCORE_DEVICE_PASSWORD=change-me
# MESHCORE_LOGIN_TARGET=repeater01

# Poll behavior
MESHCORE_POLL_INTERVAL_SECONDS=30
MESHCORE_TIMEOUT_SECONDS=20
MESHCORE_CONTACTS_TIMEOUT_SECONDS=60
MESHCORE_CONTACTS_REFRESH_SECONDS=300
MESHCORE_REQUEST_STAGGER_SECONDS=2
MESHCORE_STATUS_ERROR_RETRY_SECONDS=1

# Exporter
MESHCORE_DB_PATH=/var/lib/meshcore-prom-exporter/telemetry.db
MESHCORE_LISTEN_ADDRESS=0.0.0.0
MESHCORE_LISTEN_PORT=9108
MESHCORE_LOG_LEVEL=INFO
MESHCORE_DEBUG_MESHCLI=false
