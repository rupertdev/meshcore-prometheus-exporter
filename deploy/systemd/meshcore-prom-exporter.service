[Unit]
Description=MeshCore Prometheus Exporter
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
EnvironmentFile=/etc/meshcore-prom-exporter/meshcore-prom-exporter.env
WorkingDirectory=/opt/meshcore-prom-exporter
ExecStart=/opt/meshcore-prom-exporter/meshcore-prom-exporter
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
